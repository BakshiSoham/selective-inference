### Construct UMAU intervals for a truncated Gaussian

umpu.standard.normal <- function(cut.lo=-Inf,cut.hi=Inf,alpha=.05) {
    const <- c(alpha*(pnorm(cut.hi)-pnorm(cut.lo)),
               alpha*integrate(function(x), cut.lo, cut.hi)
}

umpu.normal <- function(mu0=0,sigma=1,cut.lo=-Inf,cut.hi=Inf,alpha=.05) {
    umpu.standard.normal((cut.lo-mu0)/sigma, (cut.hi-mu0)/sigma, alpha)
}
